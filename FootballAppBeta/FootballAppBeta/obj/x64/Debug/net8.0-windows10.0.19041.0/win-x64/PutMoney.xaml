<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="FootballAppBeta.PutMoney"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FootballAppBeta"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="PutMoney">

    <StackPanel
Background="#272537">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="15">
            <!-- Title -->
            <TextBlock FontSize="36" Foreground="White" TextAlignment="Center" Margin="0,0,0,20">
                <Run>Saldo toevoegen</Run>
            </TextBlock>
            <TextBlock>
                <Run x:ConnectionId='7' x:Name="error" Foreground="White" />
            </TextBlock>
            <!-- Input Field -->
            <TextBlock Foreground="White" >
                <Run>Tourment</Run>
            </TextBlock>
            
            <TextBox x:ConnectionId='2' 
                x:Name="Tourment" 
                FontSize="16" 
                Padding="10" 
                Background="#333333" 
                Foreground="White" 
                BorderBrush="Transparent" 
                CornerRadius="5" />

            <!-- Input Field -->
            <TextBlock Foreground="White" >
                <Run>Match</Run>
            </TextBlock>
            <TextBox x:ConnectionId='3' 
                x:Name="Match" 
                FontSize="16" 
                Padding="10" 
                Background="#333333" 
                Foreground="White" 
                BorderBrush="Transparent" 
                CornerRadius="5" />
            <!-- Input Field -->
            <TextBlock Foreground="White" >
     <Run>Team</Run>
            </TextBlock>
            <TextBox x:ConnectionId='4' 
    x:Name="Team"
    FontSize="16" 
    Padding="10" 
    Background="#333333" 
    Foreground="White" 
    BorderBrush="Transparent" 
    CornerRadius="5" />
            <!-- Input Field -->
            <TextBlock Foreground="White" >
     <Run>Money for gambling</Run>
            </TextBlock>
            <TextBox x:ConnectionId='5' 
    x:Name="ExtraMoneyForGambling" 
    FontSize="16" 
    Padding="10" 
    Background="#333333" 
    Foreground="White" 
    BorderBrush="Transparent" 
    CornerRadius="5" />
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="10">
                <Button x:ConnectionId='6' 
                    Content="Put Money" 
                    Background="#272537" 
                    Foreground="White" 
                    CornerRadius="5"
                                               >
                    <Button.Resources>
                        <Style TargetType="Button">
                            <Setter Property="Padding" Value="15,10" />
                        </Style>
                    </Button.Resources>
                </Button>

                <!-- Cancel Button -->
                <!--<Button 
                    Content="Annuleren" 
                    Background="#272537" 
                    Foreground="White" 
                    CornerRadius="5"
                    Click="Annuel">
                    <Button.Resources>
                        <Style TargetType="Button">
                            <Setter Property="Padding" Value="15,10" />
                        </Style>
                    </Button.Resources>
                </Button>-->
            </StackPanel>
        </StackPanel>
    </StackPanel>
</Window>

